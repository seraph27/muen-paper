{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/app.py" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "functions": {
    "app/backend/**/*": {
      "maxDuration": 60
    }
  }
}
