{
    "version": 2,
    "builds": [
      {
        "src": "backend/*.py",
        "use": "@vercel/python"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "frontend/build" }
      }
    ],
    "routes": [
      { "src": "/backend/(.*)", "dest": "/backend/app.py" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
  }
  